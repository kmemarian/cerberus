(* Dummy function doing nothing, but required to typecheck *)
val     convert_expr: forall 'a. Core.generic_expr 'a Symbol.sym -> Core.expr core_run_annotation
let rec convert_expr (Expr annot expr_) =
  Expr annot match expr_ with
    | Epure pe ->
        Epure pe
    | Ememop memop pes ->
        Ememop memop pes
    | Elet pat pe1 e2 ->
        Elet pat pe1 (convert_expr e2)
    | Eif pe1 e2 e3 ->
        Eif pe1 (convert_expr e2) (convert_expr e3)
    | Ecase pe pat_es ->
        Ecase pe (List.map (fun (pat, e) -> (pat, convert_expr e)) pat_es)
    | Eccall _ ty pe pes ->
        Eccall empty_annotation ty pe pes
    | Eproc _ nm pes ->
        Eproc empty_annotation nm pes
    | Eaction (Paction p (Action loc _ act_)) ->
        Eaction (Paction p (Action loc empty_annotation act_))
    | Eunseq es ->
        Eunseq (List.map convert_expr es)
    | Ewseq pat e1 e2 ->
        Ewseq pat (convert_expr e1) (convert_expr e2)
    | Esseq pat e1 e2 ->
        Esseq pat (convert_expr e1) (convert_expr e2)
    | Ebound e ->
        Ebound (convert_expr e)
    | Esave sym xs e ->
        Esave sym xs (convert_expr e)
    | Erun _ sym pes ->
        Erun empty_annotation sym pes
    | End es ->
        End (List.map convert_expr es)
    | Epar es ->
        Epar (List.map convert_expr es)
    | Ewait tid ->
        Ewait tid
    | Eannot fps e ->
        Eannot fps (convert_expr e)
    | Eexcluded n (Action loc _ act_) ->
        Eexcluded n (Action loc empty_annotation act_)
  end

let convert_globs (name, glb) =
  (name, match glb with
  | GlobalDef bTy e ->
      GlobalDef bTy (convert_expr e)
  | GlobalDecl bTy ->
      GlobalDecl bTy
  end)

val convert_file: forall 'a. generic_file 'a -> file core_run_annotation
let convert_file file =
  let convert_fun_map_decl = function
    | Fun bTy params pe ->
        Fun bTy params pe
    | ProcDecl loc bTy params ->
        ProcDecl loc bTy params
    | BuiltinDecl loc bTy params ->
        BuiltinDecl loc bTy params
    | Proc loc mrk bTy params e ->
        Proc loc mrk bTy params (convert_expr e)
  end in
  <|
    main=    file.main;
    calling_convention= file.calling_convention;
    tagDefs= file.tagDefs;
    stdlib=  Map.map convert_fun_map_decl file.stdlib;
    impl=    file.impl;
    globs=   List.map convert_globs file.globs;
    funs=    Map.map convert_fun_map_decl file.funs;
    extern=  file.extern;
    funinfo= file.funinfo;
    loop_attributes= file.loop_attributes;
    visible_objects_env= file.visible_objects_env;
  |>
(* END silly *)
