let initial_core_run_state xs = <|
  tid_supply=      0;
  aid_supply=      0;
  excluded_supply= 0;
  
  (*env=     [Map.empty];*)
  labeled= xs;
|>


let empty_annotation = <|
  sb_before  = {};
  dd_before  = {};
  asw_before = {};
